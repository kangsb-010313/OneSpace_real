	        $.ajax({
	            url: "${pageContext.request.contextPath}/onespace/api/addvote",
	            type: "POST", data: { voteNo: voteNo, postNo: postNo },
	            success: function(result) {
	                if (result) {
	                    alert("Ìà¨ÌëúÍ∞Ä ÏôÑÎ£åÎêòÏóàÏäµÎãàÎã§.");
	                    fetchVoters(voteNo);
	                } else {
